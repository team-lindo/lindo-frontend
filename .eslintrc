{
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx" : true
        }
    },
    "env": {
        "browser": true,
        "node" : true,
        "es6": true
    },
    "extends":[
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "import",
        "react-hooks"
    ],
    "settings": {
      "react": {
        "version": "detect" 
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off", // Next.js에서는 React 자동 import
      "react/prop-types": "off" // PropTypes 사용 여부에 따라 조정
    }
}